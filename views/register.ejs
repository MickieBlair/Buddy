<%- include ('partials/header') -%>
<title>Results</title>
</head>
<body>
  <%- include ('partials/nav.ejs') -%>
  <div class="main-content">
    <h1 class="text-center mt-3">Registration</h1>

    <div class="main-content">
  <div class="row ">
    <div class="col-lg-4 col-md-8 mx-auto">
      <main class="form-signin">
        <form action="/registration_student" method="POST">

          <div class="my-3">
            <label for="firstName" class="visually-hidden">First Name</label>
            <input type="text" id="firstName" name="firstName" class="form-control" placeholder="First Name" required autofocus>
          </div>

          <div class="my-3">
            <label for="lastName" class="visually-hidden">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last Name" required>
          </div>

          <div class="my-3">
            <label for="userName" class="visually-hidden">Username</label>
            <input type="text" id="userName" name="userName" class="form-control" placeholder="Username" required>
          </div>

          <div class="my-3">
            <label for="inputEmail" class="visually-hidden">Email address</label>
            <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address">
          </div>

          <div class="my-3">
            <label for="inputPassword" class="visually-hidden">Password</label>
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
          </div>

          <div class="my-3">
            <label for="comfirmPassword" class="visually-hidden">Confirm Password</label>
            <input type="password" id="comfirmPassword" name="password2" class="form-control" placeholder="Confirm Password" required>
          </div>

          <div class="my-3 text-center">
            <label for="role" class="form-label fw-bold ">Student or Volunteer:</label>
            <select class="form-control" name="role">
              <option value="" selected disabled>Select one (required).</option>
              <option value="Student">Student</option>
              <option value="Volunteer">Volunteer</option>
            </select>

          </div>

          <button class="w-100 btn btn-lg btn-primary my-3" type="submit">Sign Up</button>
        </form>
      </main>
    </div>
  </div>
</div>

  </div>

<%- include ('partials/footer') -%>
